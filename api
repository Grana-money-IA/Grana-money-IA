import Stripe from "stripe";

const stripe = new Stripe(process.env.STRIPE_SECRET_KEY);

export default async function handler(req, res) {
  if (req.method !== "POST") {
    return res.status(405).json({ error: "Método não permitido" });
  }

  try {
    const { priceId } = req.body;

    const session = await stripe.checkout.sessions.create({
      // ✅ Deixe o Stripe decidir automaticamente os métodos disponíveis
      // (card, pix, boleto, link — conforme ativados no painel)
      // Se quiser forçar manualmente, use: ['card', 'pix', 'boleto', 'link']
      // Mas o modo automático é mais seguro e atualizado:
      // payment_method_types: ['card', 'pix', 'boleto', 'link'],

      line_items: [
        {
          price: priceId,
          quantity: 1,
        },
      ],
      mode: "payment",

      // ✅ URLs de retorno
      success_url: `${req.headers.origin}/premium.html?success=true`,
      cancel_url: `${req.headers.origin}/premium.html?canceled=true`,

      // ✅ Importante: define país e moeda para habilitar Pix/Boleto
      currency: "brl",
      locale: "pt-BR",
    });

    return res.status(200).json({ id: session.id });
  } catch (err) {
    console.error("Erro ao criar sessão:", err);
    return res.status(500).json({ error: "Erro ao criar sessão" });
  }
}
