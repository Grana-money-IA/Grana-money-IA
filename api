const Stripe = require("stripe");
const stripe = new Stripe(process.env.STRIPE_SECRET_KEY);

export default async function handler(req, res) {
  if (req.method !== "POST") {
    return res.status(405).json({ error: "Method Not Allowed" });
  }

  try {
    // ID do preço do seu produto no Stripe
    const priceId = "price_1SQZuMDnXcpIZEtBrexTYyYC";

    const session = await stripe.checkout.sessions.create({
      payment_method_types: ["card"],
      line_items: [{ price: priceId, quantity: 1 }],
      mode: "payment",
      success_url: `${req.headers.origin}/premium.html?success=true`,
      cancel_url: `${req.headers.origin}/premium.html?canceled=true`,
    });

    return res.status(200).json({ id: session.id });
  } catch (error) {
    console.error("Erro ao criar sessão:", error);
    return res.status(500).json({ error: "Erro ao criar sessão de pagamento" });
  }
}
